import os
import sys
import signal
import gettext
import locale

VERSION = '1.0.8'
pkgdatadir = '/app/share/folder-cleaner'
localedir = '/app/share/locale'
locale.bindtextdomain('folder-cleaner', localedir)

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
gettext.install('folder-cleaner', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'folder-cleaner.gresource'))
    resource._register()

    from foldercleaner import main
    sys.exit(main.main())